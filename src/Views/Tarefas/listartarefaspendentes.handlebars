<header>
  <h1>Lista de Tarefas Pendentes</h1>
</header>
<main>
  <table>
    <thead>
      <tr>
        <th>Título</th>
        <th>Descrição</th>
        <th>Data</th>
        <th>Prioridade</th>
        <th>Gerenciar</th>
      </tr>
    </thead>
    <tbody>
      {{#each tarefas}}
        <tr>
          <td>{{this.titulo}}</td>
          <td>{{this.descricao}}</td>
          <td>{{this.data}}</td>
          <td>{{this.prioridade}}</td>
          <td style='text-align: center;'>
            <div
              style='display: flex; justify-content: center; gap: 10px; margin-bottom: 10px;'
            >
              <a
                href='/tasks/update/{{this.id}}'
                class='btn-edit'
                style='background-color: #4CAF50; color: white; padding: 8px 12px; text-decoration: none; border-radius: 4px; font-size: 12px; width: 80px; text-align: center; border: 1px solid #ddd;'
              >Editar</a>
              <a
                href='/tasks/delete/{{this.id}}'
                class='btn-delete'
                style='background-color: #f44336; color: white; padding: 8px 12px; text-decoration: none; border-radius: 4px; font-size: 12px; width: 80px; text-align: center; border: 1px solid #ddd;'
              >Excluir</a>
            </div>

            <form action='/tasks/concluir/{{this.id}}' method='POST'>
              <button
                type='submit'
                class='btn-concluir'
                style='background-color: #2196F3; color: white; font-size: 14px; width: 100px; cursor: pointer; border: 1px solid #ddd; padding: 8px 12px; display: block; margin: 0 auto; border-radius: 4px;'
              >
                Concluir
              </button>
            </form>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan='5'>Nenhuma tarefa pendente encontrada.</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</main>
