<div class='container'>
  <header>
    <h1>Gerenciar Tarefas</h1>
  </header>
  <main>
    <section class='expense-form'>
      <h2>Registrar Nova Tarefa</h2>
      <form action='/tasks/create' method='post'>
        <div class='form-group'>
          <label for='titulo'>Título da Tarefa:</label>
          <input
            type='text'
            id='titulo'
            name='titulo'
            placeholder='Título da tarefa'
            required
          />
        </div>
        <div class='form-group'>
          <label for='descricao'>Descrição:</label>
          <input
            type='text'
            id='descricao'
            name='descricao'
            placeholder='Descrição da tarefa'
            required
          />
        </div>
        <div class='form-group'>
          <label for='data'>Data:</label>
          <input
            type='text'
            id='data'
            name='data'
            placeholder='Data da tarefa'
            required
          />
        </div>
        <div class='form-group'>
          <label for='prioridade'>Prioridade:</label>
          <input
            type='text'
            id='prioridade'
            name='prioridade'
            placeholder='Prioridade da tarefa (ex: baixa, média, alta, urgente)'
            required
          />
        </div>
        <button type='submit' class='btn-submit'>Registrar Tarefa</button>
      </form>
    </section>
  </main>
</div>
