<div class='container'>
  <header>
    <h1>Gerenciador Financeiro</h1>
  </header>
  <main>
    <!-- Registro de Gastos -->
    <section class='expense-form'>
      <h2>Registrar Gastos</h2>
      <form action='/finance/create' method='post'>
        <div class='form-group'>
          <label for='name'>Nome do Funcionário:</label>
          <input
            type='text'
            id='name'
            name='name'
            placeholder='Nome do funcionário'
            required
          />
        </div>
        <div class='form-group'>
          <label for='cargo'>Cargo:</label>
          <input
            type='text'
            id='cargo'
            name='cargo'
            placeholder='Cargo do funcionário'
            required
          />
        </div>
        <div class='form-group'>
          <label for='description'>Descrição:</label>
          <input
            type='text'
            id='description'
            name='description'
            placeholder='Descrição'
            required
          />
        </div>
        <div class='form-group'>
          <label for='amount'>Valor:</label>
          <input
            type='number'
            step='0.01'
            id='amount'
            name='amount'
            placeholder='Valor em R$'
            required
          />
        </div>
        <div class='form-group'>
          <label for='date'>Data:</label>
          <input
            type='text'
            id='date'
            name='date'
            placeholder='Digite a data (ex: 01/01/2024)'
            required
          />
        </div>
        <button type='submit' class='btn-submit'>Adicionar Gasto</button>
      </form>
    </section>
  </main>
</div>