<header>
  <h1>Editar Registro Financeiro</h1>
</header>

<main>
  <form action='/finance/update' method='post'>
    <input type='hidden' name='id' value='{{finance.id}}' />

    <div class='form-group'>
      <label for='name'>Nome:</label>
      <input
        type='text'
        id='name'
        name='name'
        value='{{finance.name}}'
        required
      />
    </div>

    <div class='form-group'>
      <label for='cargo'>Cargo:</label>
      <input
        type='text'
        id='cargo'
        name='cargo'
        value='{{finance.cargo}}'
        required
      />
    </div>

    <div class='form-group'>
      <label for='description'>Descrição:</label>
      <input
        type='text'
        id='description'
        name='description'
        value='{{finance.description}}'
        required
      />
    </div>

    <div class='form-group'>
      <label for='amount'>Valor:</label>
      <input
        type='number'
        id='amount'
        name='amount'
        value='{{finance.amount}}'
        required
      />
    </div>

    <div class='form-group'>
      <label for='date'>Data:</label>
      <input
        type='text'
        id='date'
        name='date'
        value='{{finance.date}}'
        placeholder='Digite a data (ex: 01/01/2024)'
        required
      />
    </div>

    <button type='submit' class='btn-submit'>Salvar Alterações</button>
  </form>
</main>