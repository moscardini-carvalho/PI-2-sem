<div class='container'>
  <header>
    <h1>Gerenciar Funcionários</h1>
  </header>
  <main>
    <section class='expense-form'>
      <h2>Registrar Funcionário</h2>
      <form action='/funcionario/create' method='post'>
        <div class='form-group'>
          <label for='nome'>Nome do Funcionário:</label>
          <input type='text' id='nome' name='nome' placeholder='Nome do funcionário' required />
        </div>
        <div class='form-group'>
          <label for='cpf'>Cpf:</label>
          <input type='text' id='cpf' name='cpf' placeholder='Cpf do funcionário (EX: 123123123-12)' maxlength="12"
            required />
        </div>
        <div class='form-group'>
          <label for='telefone'>Telefone:</label>
          <input type='text' id='telefone' name='telefone' placeholder='Telefone do funcionário' required />
        </div>
        <div class='form-group'>
          <label for='email'>Email:</label>
          <input type='email' id='email' name='email' placeholder='Email do funcionário' required />
        </div>
        <div class='form-group'>
          <label for='endereco'>Endereco:</label>
          <input type='text' id='endereco' name='endereco' placeholder='Endereço do funcionário' required />
        </div>
        <div class='form-group'>
          <label for='cargo'>Cargo:</label>
          <input type='text' id='cargo' name='cargo' placeholder='Cargo do funcionário' required />
        </div>
        <div class='form-group'>
          <label for='salario'>Salario:</label>
          <input type='number' step='0.01' id='salario' name='salario' placeholder='Salario do funcionário' required />
        </div>
        <button type='submit' class='btn-submit'>Cadastrar Funcionário</button>
      </form>
    </section>
  </main>
</div>