<header>
  <h1>Lista de Funcionários</h1>
</header>
<main>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Cpf</th>
        <th>Telefone</th>
        <th>Email</th>
        <th>Endereço</th>
        <th>Cargo</th>
        <th>Salario</th>
        <th>Gerenciar</th>
      </tr>
    </thead>
    <tbody>
      {{#each records}}
      <tr>
        <td>{{this.nome}}</td>
        <td>{{this.cpf}}</td>
        <td>{{this.telefone}}</td>
        <td>{{this.email}}</td>
        <td>{{this.endereco}}</td>
        <td>{{this.cargo}}</td>
        <td>{{this.salario}}</td>
        <td>
          <a href='/funcionario/update/{{this.id}}' class='btn-edit'>Editar</a>
          <a href='/feedback/{{this.id}}' class='btn-edit'>Feedback</a>
          <a href='/funcionario/delete/{{this.id}}' class='btn-delete'>Excluir</a>
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan='6'>Nenhum registro encontrado.</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</main>